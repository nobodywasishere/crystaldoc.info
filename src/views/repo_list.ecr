<% unless repos.nil? %>
<ul class="repo-list">
  <% repos.each do |repo| %>
    <li>
      <a href="<%= repo.path %>"><%= "#{repo.username}/#{repo.project_name}" %></a>
      <div class="pill-box">
        <span class="pill"><a href="<%= repo.source_url %>"><%= repo.service %></a></span>
      </div>
    </li>
  <% end %>
</ul>
<% end %>
